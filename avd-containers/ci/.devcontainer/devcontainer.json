{
    // "image": "ghcr.io/ankudinov/avd-devcontainer/base:3.11-slim-bullseye-rev0.1",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".",
        "args": {
            "FROM_IMAGE": "${localEnv:FROM_NAME}",
            "FROM_VARIANT": "${localEnv:FROM_TAG}"
        }
    },
    
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2":{
            // do not install zsh to the base to check size diff
            "installZsh": false,
            "installOhMyZsh": false,
            "username": "vscode",
            "userUid": "1000",
            "userGid": "1000",
            // do not update packages to reduce build time
            "upgradePackages": "false"
        }
    },

	// Set `remoteUser` to `root` to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}
