{
    // the default devcontainer for the repository
    "image": "ghcr.io/ankudinov/avd-devcontainer/base:latest",
    "name": "avd-universal",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2.3.0": {
            "version": "latest"
        },
        // add sshd to support gh cli codespace cp
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // git essentials
                "piotrpalarz.vscode-gitignore-generator",
                "mhutchie.git-graph",
                "eamodio.gitlens",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // errors and highlighters
                "mechatroner.rainbow-csv",
                // excalidraw
                "pomdtr.excalidraw-editor",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "vscode-icons-team.vscode-icons",
                "mutantdino.resourcemonitor"
            ]
        }
    }
}